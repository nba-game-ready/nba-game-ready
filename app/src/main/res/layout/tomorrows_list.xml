<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@color/orange_shade">

    <RelativeLayout
        android:id="@+id/relativeLayoutHome"
        android:layout_width="128dp"
        android:layout_height="113dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="@string/home_team"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/home_team_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/home_team"
            android:layout_centerInParent="true"
            android:visibility="visible">

        </ImageView>

    </RelativeLayout>



    <TextView
        android:id="@+id/network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:hint="Network:ABC"
        android:textColor="@color/dark_grey"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayoutAway"
        android:layout_width="128dp"
        android:layout_height="113dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/away_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="away_team"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/away_team_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/away_team"
            android:layout_centerInParent="true"
            android:visibility="visible">
        </ImageView>

    </RelativeLayout>


    <TextView
        android:id="@+id/BuyTix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="BuyTix"
        android:textColor="@color/dark_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="48dp"
        android:hint="time"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayoutAway" />



</androidx.constraintlayout.widget.ConstraintLayout>